<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp"
    android:background="?attr/colorDialogBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivGenreExampleGameImageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivGenreExampleGameImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            tools:src="@drawable/ic_arrow_down"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvGenreExampleGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Grand Theft Auto V"
        app:layout_constraintTop_toBottomOf="@id/ivGenreExampleGameImageCardView"
        app:layout_constraintStart_toStartOf="@id/ivGenreExampleGameImageCardView"
        app:layout_constraintEnd_toEndOf="@id/ivGenreExampleGameImageCardView"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:maxLines="2"
        android:fontFamily="@font/sf_compact_regular_text"
        android:textSize="11sp"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>